/* pages/shangjia/shangjia.wxss */
/* 头部 */
.top{
  width: 100%;
  height: 106rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: linear-gradient(to bottom,#039ddd,#33bff8);
  }
  .top .icon{
    font-size: 36rpx;
    margin-right: 6rpx;
  }
  .top_left , .top_right{
    float: left;
    line-height: 106rpx;
    font-size: 32rpx;
    color: #fff;
  }
  .top_right{
    float:right;
  }
  /* banner图 */
  .swiper_banner{
    width: 100%;
    height: 320rpx;
  }
  .slide-image{
    width: 100%;
    height: 100%;
  }
  /* tab切换 */
  .tab_title_wrap{
    width: 100%;
    height: 88rpx;
    box-sizing: border-box;
    white-space: nowrap;
    overflow: hidden;
    padding: 0 20rpx;
    border-bottom:2rpx solid #ccc;
  }
  .tab_title text{
    line-height: 84rpx;
    padding: 0 30rpx;
    font-size:28rpx; 
    color:#666;
    display: inline-block;
    text-align: center;
  }
  .tab_title .current_tab{
    font-size: 32rpx;
    color: #189fd9;
    border-bottom: 2rpx solid #189fd9;
  }
  .current_box{
    width: 100%;
    height: 300rpx;
    line-height: 300rpx;
    text-align: center;
    display: block;
  }
  .hidden{
    display: none;
  }
  
  