/* pages/shuju/shuju.wxss */
page{
  color: #333;
  background-color: #eee;
  border-top:1px solid #ccc;
}
/* 当日收益 */
.curday{
  width: 96%;
  height: 190rpx;
  margin: 0 auto 2%;
  border-radius: 0 0 10rpx 10rpx;
  background-color: #fff;
}
.daynumber{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  }
.daynumber text{
  color: #039ddd;
  }
  .view_ul{
    width: 100%;
  }
.view_li{
  width: 33.3%;
  height: 88rpx;
  display: inline-block;
  text-align: center;
  font-size: 32rpx;
  overflow: hidden;
  }
  /* 本月、历史记录 */
  .lishi , .yaoqing{
    width: 96%;
    margin: 0 auto 2%;
    border-radius: 10rpx;
    background-color: #fff;
  }
  .lishi_li , .yaoqing_li{
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #666;
    border-bottom:1rpx solid #ccc;
  }
  .lishi_li:last-child{
    border-bottom:none;
  }
  .li_right{
    float: right;
  }
  .sumnumber{
    color: #039ddd;
  }
  /* 邀请记录 */
  .yaoqing_li{
    border-bottom:none;
  }  